<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >
    <left>
        <GridPane alignment="center" hgap="10" vgap="10">

            <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>



        </GridPane>
    </left>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

            <Label text="Enter password to protect regatta information with: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <PasswordField fx:id="passwordEntry" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Button fx:id="enterButton" text="Enter" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#enterButtonAction" />

            <Label fx:id="savedText" text=" " GridPane.columnIndex="0" GridPane.rowIndex="0" />

        </GridPane>
    </center>
    <right>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        </GridPane>
    </right>
</BorderPane>
