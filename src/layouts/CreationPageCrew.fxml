<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >
    <left>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
            <Label text="List of teams" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ListView fx:id="teamListView" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        </GridPane>
    </left>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

            <Label text="Crew name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="cNameBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Maximum crew capacity" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="phoneNumBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Birthday" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <DatePicker fx:id="birthdayPicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <RadioButton fx:id="officialRadio" text="Official" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <toggleGroup>
                    <ToggleGroup fx:id="personChoice"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="crewMemberRadio" text="Team member" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <toggleGroup>
                    <fx:reference source="personChoice"/>
                </toggleGroup>
            </RadioButton>
            <Button fx:id="enterButton" text="Enter" GridPane.columnIndex="1" GridPane.rowIndex="6" onAction="#enterButtonAction" />
        </GridPane>
    </center>
    <right>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
            <Label text="List of people" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ListView fx:id="personListView" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        </GridPane>
    </right>
</BorderPane>
